<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>index - {{ pageName }} page</title>
    <style>
        @import '/css/style.css';
        @import '/css/footer.css';

    </style>


</head>
<body background="images/B3.jpg">


{% block header %}
    <header>

        <img src="../images/logo.png" alt="logo" style="width:100%;height:5%;" >

    </header>
{% endblock %}


<hr>

{# MENU #}
<navbar>
<ul>
    <li>
        <a href="/" class="{% block homePageLinkStyle %}{% endblock %}">Home page</a>
    </li>

    <li>
        <a href="/index.php?action=games" class="{% block gamesPageLinkStyle %}{% endblock %}">Games</a>
    </li>

    <li>
        <a href="/index.php?action=developers" class="{% block developersPageLinkStyle %}{% endblock %}">Developers</a>
    </li>

    <li>
        <a href="/index.php?action=store" class="{% block storePageLinkStyle %}{% endblock %}">Store</a>
    </li>

    <li style="float: right">
        <a href="/index.php?action=login" class="{% block loginPageLinkStyle %}{% endblock %}">Login</a>

    </li>

    <li style="float: right">
        <a href="/index.php?action=admin" class="{% block adminPageLinkStyle %}{% endblock %}">Admin</a>

    </li>

</ul>
</navbar>
<br>


{#Navbar if logged Admin navabar#}
{% if isLoggedIn %}

    <nav>
        <ul>
         {#   <li><a href="/index.php?action=adminHome" class="{% block adminPagePageLinkStyle %}{% endblock %}" >Admin Home</a></li> #}
            <li class="admin"><a href="/index.php?action=item" class="{% block itemPageLinkStyle %}{% endblock %}" >List </a></li>
            <li class="admin"><a href="/index.php?action=add" class="{% block addPageLinkStyle %}{% endblock %}" >Add Items</a></li>
            <li class="admin"><a href="/index.php?action=delete" class="{% block deletePageLinkStyle %}{% endblock %}" >Delete Items</a></li>
            {#   <li><a href="/index.php?action=adminDeleteAll" class="{% block adminDeleteAllLinkStyle %}{% endblock %}">delete ALL products !</a></li> #}



          </ul>
      </nav>
      {#section if loggedin#}
    <section>
        {% if isLoggedIn %}
            <font color="white">Logged as: <strong>{{ username }}</strong></font>

            {% if userRole is defined %}
                (role = {{ userRole }})
            {% endif %}
            <br>
            <a href="/index.php?action=logout"><strong>Logout</strong></a>
        {% endif %}



    </section>
{% endif %}





{% block main %}

{% endblock %}


<footer>
    <img src="../images/FML.png" alt="logo">
    Copyright &copy; 2017
</footer>

</body>
</html>
